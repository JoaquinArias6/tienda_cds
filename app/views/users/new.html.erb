<h1 style="margin-bottom: 20px;"> Sign Up </h1>

 <%= form_tag users_path, method: 'POST' do %>
   <div>
      <p class = "form-label" >Name: </p>
      <p class = "form-control-plaintext" ><%= text_field_tag(:name) %></p>

      <p class = "form-label" >Username: </p>
      <p class = "form-control-plaintext" ><%= text_field_tag(:username) %></p>

      <p class = "form-label" >Password: </p>
      <p class = "form-control-plaintext"><%= password_field_tag(:password) %> </p>
   </div>

   <div>
    <%= submit_tag  'Register' %>
   </div>
<% end %>