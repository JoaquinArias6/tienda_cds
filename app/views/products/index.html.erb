<h1>Products</h1>

<table>
  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to 'New Product', new_product_path %>
      </td>
    </tr>
  </tfoot>
  
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= image_tag(product.image_url) %>
        </td>

        <td>
          <h3><%= product.name %></h3>

          <p>
            <%= product.description %>
          </p>

          <p>
            <%= product.price %> USD
          </p>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>